<section class="middle-section">
  <h3> <%= @header %></h3>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Job</th>
        <th scope="col">City</th>
        <th scope="col">Level of Interest</th>
        <th scope="col">email</th>
      </tr>
    </thead>
    <% @jobs.each do |job| %>
    <tbody>
      <tr>
        <th><%= link_to "#{job.title} at #{job.company.name}", job_path(job) %></th>
        <td><%= job.city %></td>
        <td><%= job.level_of_interest %></td>
        <td>@mdo</td>
      </tr>
    </tbody>
    <% end %>
  </table>
</section>
