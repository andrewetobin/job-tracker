<%= form_for [@job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, @categories, :id, :title) %>
  <%= f.label :company_id %>
  <%= f.collection_select(:company_id, @companies, :id, :name) %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
