<section class="middle-section">
  Title: <%= @job.title %>
  <br>
  <p><%= link_to "Delete", job_path(@job), method: :delete %></p>
  <p><%= link_to "Edit", edit_job_path(@job)%></p>


  Description: <%= @job.description %>
  <br>

  Level of Interest: <%= @job.level_of_interest %>
  <br>

  City: <%= @job.city %>
  <br>

  Company: <%= link_to @job.company.name, company_path(@job.company) %>

   <%= render partial: "comment-form" %>

  <table class="table table-sm">
    <thead>
      <tr>
        <th scope="col">Comment</th>
        <th scope="col">Created At</th>
      </tr>
    </thead>

        <% @comments.each do |comment| %>
        <tbody>
          <tr>
            <th><%= comment.body %></th>
            <td><%= comment.created_at.in_time_zone("Mountain Time (US & Canada)").strftime('%m-%d-%Y %I:%M:%S') %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</section>
