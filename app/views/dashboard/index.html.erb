<section class="middle-section">
  <h3>Jobs By Interest</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Interest Level</th>
        <th scope="col"># of Jobs</th>
      </tr>
    </thead>

    <% @count_by_level_of_interest.each do |loi, count| %>
    <tbody>
      <tr>
        <th><%= loi %></th>
        <td><%= count %></td>
      </tr>
    </tbody>
    <% end  %>
  </table>



  <h3>Jobs By Location</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">City</th>
        <th scope="col">Job</th>
      </tr>
    </thead>
      <% @count_by_location.each do |city, count| %>
      <tbody>
        <tr>
          <td><%= link_to city, jobs_path(location: city) %></td>
          <td><%= count %></td>
        </tr>
      </tbody>
      <% end %>
  </table>

  <h3>Top Companies by Interest</h3>
  <% @top_three_by_average_level_of_interest.each do |company| %>
  <p><%= company.name %>  has an average  <%= company.avg_level_of_interest.to_f.round(2) %> rating </p>
  <% end %>
</section>
